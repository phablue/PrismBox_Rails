<div class="container">
  <% if notice %>
      <p class = "alert alert-success"><%= notice %></p> 
  <% end %>
  <div class="page-header">
    <h1><%= @user.name%> PROFILE</h1>
  </div>
  <div class="user_profile"><br>
    <label class="col-sm-3">NAME</label>
    <div class="col-sm-5"><%= @user.name %></div><br>
    <label class="col-sm-3">EMAIL</label>
    <div class="col-sm-5"><%= @user.email %></div><br>
    <label class="col-sm-3">DEPARTMENT</label>
    <div class="col-sm-5"><%= @user.department %></div><br>
    <label class="col-sm-3">CURRENT BORROWED LAPTOP</label>
    <div class="col-sm-5"><%= @user.current_borrowed_laptop %></div><br>
    <label class="col-sm-3">CURRENT BORROWED DATE</label>
    <div class="col-sm-5"><%= @user.current_borrowed_date %></div><br>
  </div><br>
  <div class="back">
  <%= link_to "Back", '/' , class: "btn btn-primary"%>
  </div>
</div>
