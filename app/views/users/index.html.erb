<div class="container">
  <div class="starter-template">
    <h1>USERS LIST</h1>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>FULL NAME</th>
          <th>EMAIL</th>
          <th>DEPARTMENT</th>
          <th>CURRENT BORROWED LAPTOP</th>
          <th>CURRENT BORROWED DATE</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td></td>
          <td><%= user.first_name %> <%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.department %></td>
          <td><%= user.current_borrowed_laptop %></td>
          <td><%= user.current_borrowed_date %></td>
          <td><%= link_to "SHOW", user_path(user) %></td>
          <td><%= link_to "EDIT", edit_user_path(user) %></td>
          <td><%= link_to "DELETE", user, method: :delete, data: {confirm: "Are you sure? You canâ€™t cancel this action."}%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
