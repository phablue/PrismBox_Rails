<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
  <h3><strong><%= new_orders.length %></strong> new orders need to confirm.</h3>
  <% if new_orders.nil? %>
    <h1 class="page-header">New Orders</h1>
    <%= render "new_orders_table" %>
    <%= link_to "Confirm All", confirm_all_url, data: {confirm: "Do you want to confirm all new orders?"}, class: "btn btn-info" %>
  <% end %>
</div>
